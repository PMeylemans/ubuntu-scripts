popularity () {
 package=popupality-contest
 is_installed=`apt list --installed | grep popularity-contest | wc -l`
 clear
 if [ $is_installed -gt 0 ]
 then
   echo -e "\n\n\n"
   sudo apt remove popularity-contest -y
   echo -e "\n\n\n"
   echo "$package removed from the system"  
   echo -e "\n\n\n"   
 else
   echo -e "\n\n\n"
   echo "$package was not installed on the system..."
   echo -e "\n\n\n"
 fi
}